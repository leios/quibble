__verse mult_by(a | factor = 8;){
    a[_idx] *= factor;
}

void is_this_found(){};

__stanza stanza_check(a, b, c | r = a*b;){
    c[idx] = a[idx] + b[idx];
    __split_stanza();
    c[idx] += 1;
}

__poem poem_check(a, b, c, stanza_num){
    idx = get_global_id(0);
    if (stanza_num == 0){
        @SCALL stanza_check(a, b, c){
            @VCALL mult_by(c | factor = 2;);
        }
    }
}
